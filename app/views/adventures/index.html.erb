<% if user_signed_in? %>
<%= link_to 'New Adventure', new_issue_adventure_path, class: 'btn btn-default' %>
<% end %>
<%= link_to 'Back to issue', issue_path(@issue), class: 'btn btn-default' %>

<h1>Issue Adventures</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Page</th>
      <th>Authors</th>
      <th>Min level</th>
      <th>Max level</th>
      <% if user_signed_in? %>
      <th></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @adventures.each do |adventure| %>
      <tr>
        <td><%= link_to adventure.title, [adventure.issue, adventure] %></td>
        <td><%= adventure.page %></td>
        <td><%= adventure.authors.join(', ') %></td>
        <td><%= adventure.min_level %></td>
        <td><%= adventure.max_level %></td>
        <% if user_signed_in? %>
        <td><%= link_to 'Edit', edit_issue_adventure_path(adventure.issue, adventure) %> |
          <%= link_to 'Destroy', [adventure.issue, adventure], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
