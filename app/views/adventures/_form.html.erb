<%= form_for([@adventure.issue, @adventure]) do |f| %>
  <% if @adventure.errors.any? %>
    <div id="error_explanation">
      <h4><%= pluralize(@adventure.errors.count, "error") %> prohibited this adventure from being saved:</h4>

      <ul>
      <% @adventure.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :synopsis %>
    <%= f.text_area :synopsis, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :page %>
    <%= f.number_field :page, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :authors %><br>
    <%= f.select :authors, @adventure.authors || [], {}, multiple: true, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :min_level %>
    <%= f.number_field :min_level, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :max_level %>
    <%= f.number_field :max_level, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :keywords %><br>
    <%= f.select :keywords, @adventure.keywords || [], {}, multiple: true, class: 'form-control' %>
  </div>
  <%= f.submit({class: 'btn btn-primary'}) %>
<% end %>
<script>
tagsinputConf = {
  trimValue: true,
  allowDuplicates: false,
  freeInput: true
};
$('#adventure_authors').tagsinput(tagsinputConf);
$('#adventure_keywords').tagsinput(tagsinputConf);
</script>
