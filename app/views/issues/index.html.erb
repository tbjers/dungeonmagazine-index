<% if user_signed_in? %>
<%= link_to 'New Issue', new_issue_path, class: 'btn btn-default' %>
<% end %>

<h1>Dungeon Issues</h1>

<table class="table">
  <thead>
    <tr>
      <th>Issue</th>
      <th>System</th>
      <th>Articles</th>
      <th>Adventures</th>
      <% if user_signed_in? %>
      <th></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @issues.each do |issue| %>
      <tr>
        <td><%= link_to issue.issue, issue %></td>
        <td><%= issue.system %></td>
        <td><%= issue.articles.count %></td>
        <td><%= issue.adventures.count %></td>
        <% if user_signed_in? %>
        <td align="right"><%= link_to 'Edit', edit_issue_path(issue) %> | <%= link_to 'Destroy', issue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
